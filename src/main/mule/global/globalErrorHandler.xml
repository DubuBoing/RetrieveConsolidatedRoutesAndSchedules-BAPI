http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">
	<error-handler name="globalErrorHandlerError_Handler" doc:id="fed428c2-78ca-4daf-9c36-bb6fc92251e2" >
	
	<on-error-propagate enableNotifications="true" logException="true" doc:name="On Error Propagate" doc:id="23a31885-e504-4859-9cd0-08906e65c765" type="HTTP:CONNECTIVITY">
			<ee:transform doc:name="Transform Message" doc:id="07b49306-efbe-4716-8f5c-5f11c47bf630" >
				<ee:message >
					<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
{
	message:"HTTP Connectivity issue"
}]]></ee:set-payload>
				</ee:message>
			</ee:transform>
		</on-error-propagate>
